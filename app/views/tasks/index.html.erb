<h1>Welcome to the best Task Manager<h1>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <%= link_to "Show tasks", task_path(task) %>
  <%= link_to "Edit tasks", edit_task_path(task) %>
  <%= link_to "Delete tasks", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure"} %>
<% end %>


